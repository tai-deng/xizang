body{
  background-image: url(../imgs/bg.png)
}
.index_content {
  padding: 0.57rem 0.2rem 0;
  display: flex;
  justify-content: space-between;
}
/*左上图*/
.index_content .index_content_left {
  width: 5.31rem;
  box-sizing: border-box;
}
.index_content .index_content_left .engineering_management {
  width: 5.31rem;
  height: 3rem;
  border: 1px solid #00FCF9;
}
.index_content .index_content_left .engineering_management .engineering_management_title {
  font-size: 0.24rem;
  line-height: 0.47rem;
  background-color: #0B1A52;
  color: #ABCBFF;
  letter-spacing: 2px;
  text-align: center;
}
.index_content .index_content_left .engineering_management #mychart_pie_one, 
.index_content .index_content_left .engineering_management #mychart_pie_two {
  display: inline-block;
  margin-top: 0.05rem;
  margin-left: 0.05rem;
  width: 2.55rem; 
  height: 2.15rem;
}
.index_content .index_content_left .engineering_management .engineering_management_describe {
  font-size: 0.16rem;
  color: #ABCBFF;
  margin-left: 0.16rem;
} 
/*左下图*/
.index_content .index_content_left .ranking_list {
  width: 5.31rem;
  height: 3.09rem;
  border: 1px solid #00FCF9;
  margin-top: 0.1rem;
  box-sizing: border-box;
  padding: 0.13rem 0.12rem 0.1rem;
}
.index_content .index_content_left .ranking_list .ranking_list_title {
  line-height: 0.36rem;
  font-size: 0.18rem;
  color: #ABCBFF;
}
.index_content .index_content_left .ranking_list .ranking_list_title .items_num,
.index_content .index_content_left .ranking_list .ranking_list_title .investment_situation {
  display: inline-block;
  width: 0.94rem;
  border: 1px solid #4574D6;
  text-align: center;
}
.index_content .index_content_left .ranking_list .ranking_list_title .investment_situation {
  margin-left: -0.05rem;
}
.index_content .index_content_left .ranking_list .ranking_list_title .ranking {
  vertical-align: text-top;
  margin-left: 2.4rem;
}
.index_content .index_content_left .ranking_list .ranking_list_content {
  font-size: 0.18rem;
  color: #ABCBFF;
  margin-top: -0.08rem;
}
.index_content .index_content_left .ranking_list .ranking_list_content table {
  width: 5.07rem;
  height: 2.5rem;
  border: 1px solid #355AAF;
}
.index_content .index_content_left .ranking_list .ranking_list_content table,
.index_content .index_content_left .ranking_list .ranking_list_content table tr,
.index_content .index_content_left .ranking_list .ranking_list_content table tr td {
  text-align: center;
  vertical-align: middle;
}
.index_content .index_content_left .ranking_list .ranking_list_content table tr:first-child {
  border: 1px solid #355AAF;
  vertical-align: middle;
}
.index_content .index_content_left .ranking_list .ranking_list_content table tr .ranking_number {
  width: 0.8rem;
}
.index_content .index_content_left .ranking_list .ranking_list_content table tr .county {
  width: 1.4rem;
}
.index_content .index_content_left .ranking_list .ranking_list_content table tr .number {
  width: 0.8rem;
}
.index_content .index_content_left .ranking_list .ranking_list_content table tr td div.layui-progress {
  border-radius: 0;
  background-color: transparent;
}
.index_content .index_content_left .ranking_list .ranking_list_content table tr td div.layui-progress div.layui-progress-bar {
  border-radius: 0;
}
.active {
  box-shadow: 0px 0px 4px 0px rgba(53,128,255,1);
}
/*中图*/
.index_content .index_content_center {
  width: 7.78rem;
  height: 6.2rem;
  box-sizing: border-box;
}
.index_content .index_content_center .map_display{
  width: 100%;
  height: 100%;
  border: 1px solid #00FCF9;
}
.index_content .index_content_center .map_display .map_title {
  font-size: 0.24rem;
  line-height: 0.47rem;
  background-color: #0B1A52;
  color: #ABCBFF;
  letter-spacing: 2px;
  text-align: center;
}
.index_content .index_content_center .map_display #mychart_map {
  width: 7.58rem;
  height: 5.5rem;
}
/*右上图*/
.index_content .index_content_right {
  width: 5.31rem;
  box-sizing: border-box;
}
.index_content .index_content_right .investment_management {
  width: 5.31rem;
  height: 3rem;
  border: 1px solid #00FCF9;
}
.index_content .index_content_right .investment_management .investment_management_title {
  font-size: 0.24rem;
  line-height: 0.47rem;
  background-color: #0B1A52;
  color: #ABCBFF;
  letter-spacing: 2px;
  text-align: center;
}
.index_content .index_content_right .investment_management .investment_management_content {
  color: #ABCBFF;
  width: 5.1rem;
  line-height: 0.36rem;
  font-size: 0.18rem;
  border: 1px solid #4574D6;
  margin-left: 0.1rem;
  margin-top: 0.1rem;
  text-align: center;
}
.index_content .index_content_right .investment_management .investment_management_content .total,
.index_content .index_content_right .investment_management .investment_management_content .in_place,
.index_content .index_content_right .investment_management .investment_management_content .plan {
  display: inline-block;
  width: 1.6rem;
  border-right: 1px solid #4574D6;
}
.index_content .index_content_right .investment_management .investment_management_content .plan {
  border: none;
}
.index_content .index_content_right .investment_management #mychart_pie_three, 
.index_content .index_content_right .investment_management #mychart_pie_four {
  display: inline-block;
  margin-top: 0.05rem;
  margin-left: 0.05rem;
  width: 2.55rem; 
  height: 1.7rem;
}
.index_content .index_content_right .investment_management .capital {
  font-size: 0.16rem;
  color: #ABCBFF;
  margin-left: 0.16rem;
}
/*右下图*/
.index_content .index_content_right .investment_bar {
  width: 5.31rem;
  height: 3.09rem;
  border: 1px solid #00FCF9;
  margin-top: 0.1rem;
}
.index_content .index_content_right .investment_bar #mychart_bar {
  margin-top: 0.11rem;
  margin-left: 0.26rem;
  width: 5.2erm;
  height: 3.2rem;
}
/*底部*/
.index_bottom {
  padding: 0 0.2rem;
  display: flex;
  justify-content: space-between;
  margin-top: 0.2rem;
}
/*左图*/
.index_bottom .annulus {
  width: 9.3rem;
  height: 3rem;
  border: 1px solid #00FCF9;
}
.index_bottom .annulus .annulus_title {
  font-size: 0.24rem;
  line-height: 0.47rem;
  background-color: #0B1A52;
  color: #ABCBFF;
  letter-spacing: 2px;
  text-align: center;
  position: relative;
}
.index_bottom .annulus .annulus_title .annulus_state {
  font-size: 0.16rem;
  position: absolute;
  right: 0.26rem;
}
.index_bottom .annulus ul {
  padding: 0 0.2rem;
}
.index_bottom .annulus ul li {
  display: inline-block;
  width: 30%;
  line-height: 1rem;
  margin-left: 0.25rem;
}
.index_bottom .annulus ul li .annulus_content_title {
  font-size: 0.16rem;
  color: #ABCBFF;
  text-align: center;
}
/*右图*/
.index_bottom .working_condition {
  width: 9.3rem;
  height: 3rem;
  border: 1px solid #00FCF9;
}
.index_bottom .working_condition .working_condition_title {
  font-size: 0.24rem;
  line-height: 0.47rem;
  background-color: #0B1A52;
  color: #ABCBFF;
  letter-spacing: 2px;
  text-align: center;
}
.index_bottom .working_condition .working_condition_content {
  height: 2.4rem;
  overflow-x:hidden
}
.index_bottom .working_condition table {
  border: 1px solid #355AAF;
  width: 8.71rem;
  margin-left: 0.27rem;
  margin-top: 0.22rem;
  text-align: center;
  color: #ABCBFF;
}
.index_bottom .working_condition table tr,
.index_bottom .working_condition table tr td {
  border: 1px solid #355AAF;
  vertical-align: middle;
}
.index_bottom .working_condition table tr:first-child {
  line-height: 0.36rem;
}
.index_bottom .working_condition table tr .serial_number {
  width: 0.6rem;
}
.index_bottom .working_condition table tr .entry_name {
  width: 1rem;
}

